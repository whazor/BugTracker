<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Name="BugTrackerScreens_Layout"
	mc:Ignorable="d"
	x:Class="BugTrackerScreens.Screen_2">

	<Grid x:Name="LayoutRoot_Copy" Style="{DynamicResource Layout}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.Background>
			<RadialGradientBrush RadiusX="-1" RadiusY="1">
				<RadialGradientBrush.RelativeTransform>
					<TransformGroup>
						<ScaleTransform CenterY="0.5" CenterX="0.5"/>
						<SkewTransform CenterY="0.5" CenterX="0.5"/>
						<RotateTransform CenterY="0.5" CenterX="0.5"/>
						<TranslateTransform/>
					</TransformGroup>
				</RadialGradientBrush.RelativeTransform>
				<GradientStop Color="White" Offset="0.5"/>
				<GradientStop Color="#FFB6B6B6" Offset="1"/>
			</RadialGradientBrush>
		</Grid.Background>
		<Image Margin="10,10,0,0" Source="bug.png" Stretch="Fill" HorizontalAlignment="Left" Width="100" Height="80" VerticalAlignment="Top"/>
		<Label Content="Bugtracker" HorizontalAlignment="Left" Height="29" Margin="10,85.5,0,0" VerticalAlignment="Top" Width="100" FontSize="16" FontFamily="Tahoma" FontWeight="Bold"/>
	</Grid>
</UserControl>